@page
@model Car_Cost_Calculator.Pages.CostOverviewModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/Navigation.css" type="text/css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</head>
<body>



    <div class="container-fluid text-center">
        <div class="row content">
            <div class="col-sm-2 sidenav">

                <img style=" width: 75px; height: 105px;" src="~/Images/CarCostNavLogo.png">


<!--verander axis, horizontaal naar digitaal vice versa-->
<!--ipv 1 kolom naar 2 kolommen-->
<!--foreach loop met de data en tel op in totaal-->
<!-- verschillende kosten naar 1 kost brengen, behalve brandstofkosten-->
<!--creeer functie waarbij je foreach loop doet tussen bepaalde datums in-->
            </div>
            <div class="col-sm-8 text-left">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Voertuig:</th>
                            <th scope="col">Kenteken:</th>
                            <th scope="col">Prijs (bij aanschaf):</th>
                            <th scope="col">Tank Kosten:</th>
                            <th scope="col">Overige Kosten:</th>
                            <th scope="col">Totaal:</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var vehicle in Model.vehicles)
                        {
                            <tr>
                                <td>@vehicle.Vehicle_Kind</td>
                                <td>@vehicle.Number_Plate</td>
                                <td>@vehicle.BuyCost</td>
                                @foreach (var tank in Model.tanks)
                                {
                                    <td>@tank.Tank_Cost</td>
                                }
                                @foreach (var cost in Model.cost)
                                {
                                    <td>@cost.Cost_Amount</td>
                                }
                            </tr>
                            // ipv foreach loop laat een sum de model.cost/model/tanks doen en laat totaal sum query over alle kosten zijn
                            // eerste foreach loop returned nu alleen data maar moet sum teruggeven
                            // tweede foreach loop moet ook scherm returnen.
                            // op auto klikken moet naar tankcostbyvehicle linken zodat je alle inviduele tankbeurten kan zien.
                            // query foreach loop niet gelukt, rest van site werkt wel.
                        }
                        @foreach (var cost in Model.Info)
                        {
                            @*<tr>
                                <td>@cost.Cost_Amount</td>
                            </tr>*@
                        }

                    </tbody>

                </table>



            </div>
            <div class="col-sm-2 sidenav">

                <p>Handige Links:</p>
                <p><a href="/UserVehicles">Mijn voertuigen</a></p>
                <p><a href="/MyAccount">Mijn Account</a></p>
                <p><a href="/CostInput">Kosten Invoeren</a></p>
                <p><a href="/CostOverview">Kosten Overzicht</a></p>




            </div>
        </div>
    </div>




</body>
</html>
