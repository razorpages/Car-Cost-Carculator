                        </div>
                    </div>
                    @*<div class="row">
                        <div class="column">
                            <label asp-for="account.password" for="lname">Wachtwoord</label>
                            <input type="text">
                        </div>
                    </div>*@
                    <div class="row">
                        <div class="column">
                            <button class="btn btn-warning" asp-page="UserVehicles">Login</button>
                        </div>
                    </div>
                </div>
            </form>


            </div>
            <div class="col-sm-2 sidenav">


              

            </div>
        </div>
    </div>




