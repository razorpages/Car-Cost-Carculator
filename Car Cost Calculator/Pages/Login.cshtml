@page
@model Car_Cost_Calculator.Pages.LoginModel
@{
    ViewData["Title"] = "Inloggen";
}
<!DOCTYPE html>
<html lang="en">
<head>
   
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>


        /* Set height of the grid so .sidenav can be 100% (adjust as needed) */
        .row.content {
            height: 450px
        }

        /* Set gray background color and 100% height */
        .sidenav {
            padding-top: 20px;
            background-color: #f1f1f1;
            height: 100%;
        }
    </style>
</head>
<body>



    <div class="container-fluid text-center">
        <div class="row content">
            <div class="col-sm-2 sidenav">

                <img style=" width: 75px; height: 105px;" src="~/Images/CarCostNavLogo.png">



            </div>

            <div class="col-sm-8 text-left">
                <h2>Inloggen</h2>
                <div asp-validation-summary="All"></div>
                <form method="post" asp-page-handler="CheckLogin">

                    <div class="container">

                        <div class="row">
                            <div class="column">
                                <label>E-mailadres*</label> <br>
                                <input asp-for="user.mail" type="email">
                                <span asp-validation-for="user.mail"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="column">
                                <label>Wachtwoord*</label> <br>
                                <input asp-for="user.password" type="password">
                                <span asp-validation-for="user.password"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="column">
                                <input type="checkbox" />
                                <label for="Sessie">Ingelogd blijven.</label>
                                <p>*=Verplicht</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="column">
                                <input type="submit" value="Submit">
                            </div>
                        </div>


                    </div>

                </form>
                <p>Met het versturen van dit registratieformulier, gaat u automatisch akkoord met de <a href="/Privacy">privacy voorwaarden</a>.</p>

            </div>


           
            <div class="col-sm-2 sidenav">

                <p>Handige Links:</p>
                <p><a href="/Login">Login</a></p>
                <p><a href="/Register">Registreren</a></p>


            </div>
        </div>
    </div>




</body>
</html>


