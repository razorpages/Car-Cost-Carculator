@page
@model Car_Cost_Calculator.Pages.RegisterModel
@{
    ViewData["Title"] = "Registreren";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/Navigation.css" type="text/css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>


    <div class="container-fluid text-center">
        <div class="row content">
            <div class="col-sm-2 sidenav">

                <img style=" width: 75px; height: 105px;" src="~/Images/CarCostNavLogo.png"/>
            </div>

            <div class="col-sm-8 text-left">
                <h2>Registreren</h2>

                <form method="post" asp-page-handler="Register">
                <div class="container">

                    <div class="row">
                        <div class="column">
                            <label for="naam">Naam*</label>
                            <input type="text" asp-for="user.full_name">
                            <span class="text-danger" asp-validation-for="user.full_name"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="column">
                            <label for="mail">
                                E-mailadres*
                            </label>
                            <input type="text" asp-for="user.mail">
                            <span class="text-danger" asp-validation-for="user.mail"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="column">
                            <label for="passw">Wachtwoord*</label>
                            <input type="password" asp-for="user.password">
                            <span class="text-danger" asp-validation-for="user.password"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="column">
                            <input type="checkbox" />
                            <label for="nieuwsbrief">Ik meld bij aan voor de nieuwsbrief</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="column">
                            <input type="checkbox" value="1" />
                            <label for="nieuwsbrief">Klik op het vakje om te bevestigen dat je geen robot bent.*</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="column">
                            <input class="btn btn-warning" type="submit" value="Submit">
                        </div>
                    </div>

                </div>
                </form>

                <p>*=Verplicht</p>
                <p>Met het versturen van dit registratieformulier, gaat u automatisch akkoord met de <a href="/Privacy">Privacy voorwaarden</a>



            </div>
            <div class="col-sm-2 sidenav">




            </div>
        </div>
    </div>




</body>
</html>


